{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@wangeditor/editor-for-vue": [
        "./node_modules/@wangeditor/editor-for-vue/dist/src"
      ]
    },
    "types": ["element-plus/global"]
  }
}
